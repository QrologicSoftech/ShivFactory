@model ShivFactory.Business.Repository.VendorShippingAreaModel
@{
    ViewBag.Title = "VendorShippingArea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@ViewBag.Title</h4>
                          
                        </div>
                        <div class="wrapper border-top">
                            <div class="card-body">
                                @using (Html.BeginForm("AddShippingArea", "vendor", FormMethod.Post, new { id = "myform", @class = "forms-sample" }))
                                {
                                    <div class="row">
                                        <div class="col-lg-4 col-sm-4">
                                            <div class="form-group">
                                                <label>Vendor Name </label>
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.VendorName, new { @class = "form-control", disabled = "disabled" })
                                                @Html.ValidationMessageFor(model => model.VendorName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-sm-4">
                                            <div class="form-group">
                                                <label>Pincode</label>
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.Pincode, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Pincode, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        
                                    </div>

                                    @Html.HiddenFor(model => model.ID)
                                    @Html.HiddenFor(model => model.VendorId)

                                    <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                                    @*<button class="btn btn-light" type="reset">Cancel</button>*@

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>