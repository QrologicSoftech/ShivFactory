@model ShivFactory.Business.Repository.clsProductVarient
@{
    ViewBag.Title = "Product Varient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Js/Product Varient.js"></script>
<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h3>@ViewBag.Title</h3>
                        </div>
                        <div class="container py-3 my-3 border rounded shadow-sm">
                            <div class="row">
                                <section class="col-12">
                                    <ul class="nav nav-tabs flex-nowrap" role="tablist">
                                        <li role="presentation" class="nav-item">
                                            <a href="#step1"  class="nav-link disabled" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1"> <b>Vital Info </b></a>
                                        </li>
                                        <li role="presentation" class="nav-item">
                                            <a href="#step2" class="nav-link disabled" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2"> <b>Price </b></a>
                                        </li>
                                        <li role="presentation" class="nav-item">
                                            <a href="#step3" class="nav-link disabled" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3"><b> Dimension</b></a>
                                        </li>
                                        <li role="presentation" class="nav-item">
                                            <a href="#step4" class="nav-link disabled" data-toggle="tab" aria-controls="step4" role="tab" title="Step 4"><b>Details</b></a>
                                        </li>
                                        <li role="presentation" class="nav-item">
                                            <a href="#step5" class="nav-link disabled" data-toggle="tab" aria-controls="step5" role="tab" title="Step 5"><b> Others</b></a>
                                        </li>
                                        <li role="presentation" class="nav-item">
                                            <a href="#step6" class="nav-link disabled" data-toggle="tab" aria-controls="step6" role="tab" title="step6"><b>Image </b> </a>
                                        </li>
                                        <li role="presentation" class="nav-item">
                                            <a href="#complete" class="nav-link active" data-toggle="tab" aria-controls="complete" role="tab" title="Complete"><b>Varient </b> </a>
                                        </li>
                                    </ul>

                                    @using (Html.BeginForm("ProductVarients", "Vendor", FormMethod.Post, new { @enctype = "multipart/form-data", id = "myform", @class = "forms-sample" }))
                                    {
                                        <div class="tab-content py-2">

                                            @Html.HiddenFor(model => model.SubCategoryId)
                                            @Html.HiddenFor(model => model.ProductId)
                                            @Html.HiddenFor(model => model.ProductQty)
                                            @Html.HiddenFor(model => model.SalePrice)
                                            @Html.HiddenFor(model => model.ListPrice)
                                            
                                            
                                            <div class="tab-pane active" role="tabpanel" id="step1">
                                                <h4><b>Add Varient </b></h4>
                                                <p></p>

                                                <div class="row">
                                                    <div class="col-lg-4 col-sm-4">
                                                        <div class="form-group">
                                                            <label>varient</label>
                                                        </div>
                                                        <div class="form-group">
                                                            @Html.DropDownListFor(model => model.varientId, ViewBag.Varient as SelectList, "Select", new { @class = "form-control", id = "Varient", onchange = "productVarient.BindVarientDDL();" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="inc">
                                                    
                                                </div>

                                                <ul class="float-right">
                                                    <li class="list-inline-item">
                                                        <button type="button" onclick="productVarient.BindVariationToProductTbl();" class="btn btn-outline-primary prev-step">Process</button>
                                                    </li>
                                                    
                                                </ul>
                                            </div>

                                            <div class="tab-pane active" role="tabpanel" id="step2">
                                                @*<a href="#" style="float:right" onclick="productVarient.AddMoreVarientToProduct();">Back</a>*@
                                                <div id="dvTable">
                                                </div>

                                                <ul class="float-right">
                                                    <li class="list-inline-item">
                                                        <button type="button" onclick="productVarient.TableToJSON('#tblProduct');" class="btn btn-outline-primary prev-step">Save</button>
                                                    </li>

                                                </ul>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    }
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
