@model ShivFactory.Business.Repository.clsProductVarient
@{
    ViewBag.Title = "Product Varient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Js/Product Varient.js"></script>
<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h3>@ViewBag.Title</h3>
                        </div>
                        <div class="container py-3 my-3 border rounded shadow-sm">
                            <div class="row">
                                <section class="col-12">
                                    @using (Html.BeginForm("ProductVarient", "Vendor", FormMethod.Post, new { @enctype = "multipart/form-data", id = "myform", @class = "forms-sample" }))
                                    {
                                    <div class="tab-content py-2">

                                        @Html.HiddenFor(model => model.SubCatId);
                                        @Html.HiddenFor(model => model.productId);
                                        @Html.HiddenFor(model => model.productQty);
                                        @Html.HiddenFor(model => model.salePrice);
                                        @Html.HiddenFor(model => model.listPrice);

                                        <div class="tab-pane active" role="tabpanel" id="step1">
                                            <h4><b>Add Varient </b></h4>
                                            <p></p>

                                            <div class="row">
                                                <div class="col-lg-4 col-sm-4">
                                                    <div class="form-group">
                                                        <label>Varient</label><enum><b>*</b></enum>
                                                    </div>
                                                    <div class="form-group">
                                                        @*@Html.DropDownListFor(model => model.CategoryId, ViewBag.Category as SelectList, "Select", new { @class = "form-control", id = "Category", onchange = "product.BindSubCategoryByCatId('#Category', '#SubCategory','#MiniCategory')" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })*@
                                                    </div>
                                                </div>
                                                <div class="col-lg-4 col-sm-4">
                                                    <div class="form-group inc">
                                                        <div class="controls">
                                                            <input type="text" class="form-control" name="textbox" placeholder="textbox" />
                                                            <input type="text" class="form-control" name="text" placeholder="text" />

                                                            <button class="btn btn-primary" type="button" id="append" name="append" onclick="productVarient.AddNewTextBox()">
                                                                Add Textbox
                                                            </button>
                                                            <br>
                                                            <br>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            @*<button type="button" class="btn btn-primary next-step float-right">Next</button>*@
                                        </div>

                                        <div class="clearfix"></div>

                                    </div>
                                    }
                                </section>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

