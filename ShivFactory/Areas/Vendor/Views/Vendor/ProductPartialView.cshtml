@model IEnumerable<DataLibrary.DL.Product>
@{
    ViewBag.Title = "ProductPartialView";
}

<div class="row overflow-auto">
    <div class="col-12">
        <table class="table datatable" cellspacing="0" width="100%">
            <thead>
                <tr class="bg-primary text-white">
                    <th>Sr No.</th>
                    <th>Product Name</th>
                    <th>Product Image</th>
                    <th>Is Active</th>
                    <th>Add Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @{int index = 1;
                    foreach (var item in Model)
                    {
                                <tr>
                                    <td>@index</td>
                                    <td>@item.ProductName</td>

                                    @{
                                        var status = item.IsActive == true ? "Active" : "InActive";
                                        var addDate = item.AddUpdate != null ? item.AddUpdate?.ToString("dd/MM/yyyy") : "";
                                        var className = item.IsActive == true ? "badge badge-success" : "badge badge-danger";
                                        var mainImage = item.MainImage == null || item.MainImage=="" ? "/Content/UploadedImages/61644ecb-1f1d-418a-8ed1-09c1e4cc05781-2.jpg" : item.MainImage;
                                    }
                                    <td>
                                        <a href="@Url.Content(mainImage)" target="_blank"><img src="@mainImage" alt="" style="height:40px;width:40px;" /></a>
                                    </td>
                                    <td> <label class="@className">@status</label></td>
                                    <td>@addDate</td>
                                    <td class="text-right">
                                        <button class="btn btn-light">
                                            <i class="mdi mdi-database-edit text-primary"></i>
                                            @Html.ActionLink("Edit", "AddProduct", new { Area = "Vendor", id = item.ProductId })
                                        </button>
                                        <button class="btn btn-light">
                                            <i class="mdi mdi-close text-danger"></i>
                                            @Html.ActionLink("Delete", "DeleteProduct", new { Area = "Vendor", @class = "fa fa-trash", id = item.ProductId }, new { onclick = "return confirm('Are you sure to delete this Product?');" })
                                        </button>
                                    </td>
                                </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.datatable').DataTable();
    });
</script>