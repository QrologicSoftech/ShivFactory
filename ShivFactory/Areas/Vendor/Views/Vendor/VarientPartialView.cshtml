@model List<ShivFactory.Business.Repository.Admin.ProductVarientResponse>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Varients";
}
<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@ViewBag.Title</h4>
                            <div class="row grid-margin">
                                <div class="col-12">
                                    <div class="card-description">
                                        @using (Html.BeginForm("ProductVarient", "Vendor", new { Area = "Vendor", id = ViewBag.ProductId }, FormMethod.Get))
                                        {
                                            <p class="card-description" style=" text-align: end;">
                                                <button type="submit" class="btn btn-primary">
                                                    Add Varient
                                                </button>
                                            </p>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="row overflow-auto">
                                <div class="col-12">
                                    <table class="table datatable" cellspacing="0" width="100%">
                                        <thead>
                                            <tr class="bg-primary text-white">
                                                <th>Sr No.</th>
                                                <th>Images</th>
                                                <th>Qty</th>
                                                <th>SalePrice</th>
                                                <th>ListPrice</th>
                                                <th>Feature1</th>
                                                <th>Feature2</th>
                                                <th>Feature3</th>
                                                <th>Feature4</th>
                                                <th>Feature5</th>
                                                <th>Feature6</th>
                                                <th>Feature7</th>
                                                <th>Feature8</th>
                                                <th>Feature9</th>
                                                <th>Feature10</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @{int index = 1;
                                                foreach (var item in Model)
                                                {
                                                    <tr id="@item.Id">
                                                        <td>@index</td>
                                                        <td><button class="btn btn-link" onclick="Admin.GetProductImages(this, true);" title="Show Images">View</button></td>
                                                        <td>
                                                            <button class="btn btn-link" title="Update Quentity" onclick="Vendor.ShowVarientQty(this);">@item.ProductQty</button>
                                                        </td>
                                                        <td>
                                                            <button class="btn btn-link" title="Update SalePrice">@item.SalePrice</button>
                                                        </td>
                                                        <td>
                                                            <button class="btn btn-link" title="Update ListPrice">@item.ListPrice</button>
                                                        </td>
                                                        <td>
                                                            @item.Feature1
                                                        </td>
                                                        <td>
                                                            @item.Feature2
                                                        </td>
                                                        <td>
                                                            @item.Feature3
                                                        </td>
                                                        <td>
                                                            @item.Feature4
                                                        </td>
                                                        <td>
                                                            @item.Feature5
                                                        </td>
                                                        <td>
                                                            @item.Feature6
                                                        <td>
                                                            @item.Feature7
                                                        <td>
                                                            @item.Feature8
                                                        <td>
                                                            @item.Feature9
                                                        </td>
                                                        <td>
                                                            @item.Feature10
                                                        </td>
                                                        <td>
                                                            <button class="btn btn-light" onclick="Admin.DeleteWeight(@item.Id);">
                                                                <i class="mdi mdi-close text-danger">Delete</i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    index++;
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.datatable').DataTable();
    });
</script>
