                                                    @Html.ValidationMessageFor(model => model.ProductLength, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Width</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.ProductWidth, new { @class = "form-control", @rows = 5 })
                                                    @Html.ValidationMessageFor(model => model.ProductWidth, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Height</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.ProductHeight, new { @class = "form-control", @autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.ProductHeight, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <p><b>Package Dimensions</b></p>
                                        <div class="row">

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Length</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.PackageLength, new { @class = "form-control", @autocomplete = "off" })
