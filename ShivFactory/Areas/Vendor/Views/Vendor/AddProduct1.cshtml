                                                    @Html.ValidationMessageFor(model => model.PackageLength, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Width</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.PackageWidth, new { @class = "form-control", @rows = 5 })
                                                    @Html.ValidationMessageFor(model => model.PackageWidth, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Height</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.PackageHeight, new { @class = "form-control", @autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.PackageHeight, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <p><b>Misc Details </b></p>
                                        <div class="row">
                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Product Weight</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.ProductWeight, new { @class = "form-control", @autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.ProductWeight, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Package Weight</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.PackageWeight, new { @class = "form-control", @autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.PackageWeight, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <ul class="float-right">
                                            <li class="list-inline-item">
                                                <button type="button" class="btn btn-outline-primary prev-step">Previous</button>
                                            </li>
                                            <li class="list-inline-item">
                                                <button type="button" class="btn btn-primary next-step">Next</button>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="tab-pane" role="tabpanel" id="step4">
                                        <h4><b>Product Details</b> </h4>
                                        <p></p>

                                        <div class="row">
                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Total No. of Stock to sell</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.StockCount, new { @class = "form-control", @autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.StockCount, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Shell Life</label>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.ShellLife, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.ShellLife, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Mgf Date</label>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.MgfDate, new { @class = "form-control", @type = "date" })
                                                    @Html.ValidationMessageFor(model => model.MgfDate, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Product Manufacturer Details</label>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextAreaFor(model => model.MgfDetail, new { @class = "form-control", @autocomplete = "off", @rows = 5 })
                                                    @Html.ValidationMessageFor(model => model.MgfDetail, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Product Warning</label>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextAreaFor(model => model.ProductWarning, new { @class = "form-control", @rows = 5, @autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.ProductWarning, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Product Description</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = 5, @autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>

                                        <ul class="float-right">
                                            <li class="list-inline-item">
                                                <button type="button" class="btn btn-outline-primary prev-step">Previous</button>
                                            </li>
                                            <li class="list-inline-item">
                                                <button type="button" class="btn btn-primary next-step">Next</button>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="tab-pane" role="tabpanel" id="step5">
                                        <h4><b>Others</b> </h4>
                                        <p></p>

                                        <div class="row">
                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>IsActive</label>
                                                </div>
                                                <div class="form-group">
                                                    @Html.CheckBoxFor(x => x.IsActive, new { @style = "height: 30px; width:30px;" })
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>IsReturnable</label>
                                                </div>
                                                <div class="form-group">
                                                    @Html.CheckBoxFor(x => x.IsReturnable, new { @style = "height: 30px; width:30px;" })
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Returninig Days</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.ReturnDays, new { @class = "form-control", @autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.ReturnDays, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Estimate Delivery Time</label><enum><b>*</b></enum>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(model => model.EstimateDeliveryTime, new { @class = "form-control", @autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.EstimateDeliveryTime, "", new { @class = "text-danger", @placeholder = "10 Days" })
                                                </div>
                                            </div>

                                        </div>


                                        <ul class="float-right">
                                            <li class="list-inline-item">
                                                <button type="button" class="btn btn-outline-primary prev-step">Previous</button>
                                            </li>
                                            <li class="list-inline-item">
                                                <button type="button" class="btn btn-primary next-step">Next</button>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="tab-pane" role="tabpanel" id="step6">
                                        <h4><b>Product Images</b> </h4>
                                        <p></p>
                                        @Html.HiddenFor(model => model.MainImage)
                                        @Html.HiddenFor(model => model.Image1)
                                        @Html.HiddenFor(model => model.Image2)
                                        @Html.HiddenFor(model => model.Image3)
                                        @Html.HiddenFor(model => model.Image4)
                                        @Html.HiddenFor(model => model.Image5)
                                        @Html.HiddenFor(model => model.Image6)
                                        <div class="row">
                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Main Image</label><enum><b>*</b></enum>
                                                    <input type="file" name="img[]" class="file-upload-default">
                                                </div>
                                                <div class="ajax-file-upload-container form-group">
                                                    @Html.TextBoxFor(model => model.PostedFile, new { @class = "form-control file-upload-info", type = "file", accept = "image/*", onchange = "readfile(this,'imagePreview')" })
                                                    @Html.ValidationMessageFor(model => model.PostedFile, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">
                                                    @{ var display = Model != null && Model.MainImage != null ? "display:block" : "display:none";
                                                        var imgPath = Model != null && Model.MainImage != null ? Model.MainImage : "";}
                                                    <img id="imagePreview" src="@imgPath" class="img-preview img-preview-sm img-thumbnail" style="@display" />

                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Image1</label>
                                                </div>
                                                <div class="ajax-file-upload-container form-group">
                                                    @Html.TextBoxFor(model => model.files, new { @class = "form-control file-upload-info", type = "file", accept = "image/*", onchange = "readfile(this,'imagePreview1')" })
                                                    @Html.ValidationMessageFor(model => model.Image1, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">
                                                    @{ var display1 = Model != null && Model.Image1 != null ? "display:block" : "display:none";
                                                        var img1Path = Model != null && Model.Image1 != null ? Model.Image1 : "";}
                                                    <img id="imagePreview1" src="@img1Path" class="img-preview img-preview-sm img-thumbnail" style="@display1" />
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Image 2</label>
                                                </div>
                                                <div class="ajax-file-upload-container form-group">
                                                    @Html.TextBoxFor(model => model.files, new { @class = "form-control file-upload-info", type = "file", accept = "image/*", onchange = "readfile(this,'imagePreview2')" })
                                                    @Html.ValidationMessageFor(model => model.Image2, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">
                                                    @{ var display2 = Model != null && Model.Image2 != null ? "display:block" : "display:none";
                                                        var img2Path = Model != null && Model.Image2 != null ? Model.Image2 : "";}
                                                    <img id="imagePreview2" src="@img2Path" class="img-preview img-preview-sm img-thumbnail" style="@display2" />
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col-lg-4 col-sm-4">
                                                <div class="form-group">
                                                    <label>Image 3</label>

                                                </div>
                                                <div class="ajax-file-upload-container form-group">
                                                    @Html.TextBoxFor(model => model.files, new { @class = "form-control file-upload-info", type = "file", accept = "image/*", onchange = "readfile(this,'imagePreview3')" })
                                                    @Html.ValidationMessageFor(model => model.Image3, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="form-group">
                                                    @{ var display3 = Model != null && Model.Image3 != null ? "display:block" : "display:none";
