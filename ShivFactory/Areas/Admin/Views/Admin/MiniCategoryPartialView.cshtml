@model IEnumerable<ShivFactory.Business.Model.MiniCategoryModel>
@{
    ViewBag.Title = "MiniCategoryPartialView";
}

<p class="card-description">
    Mini Category list
</p>
<table class="table table-bordered" id="example">
    <thead>
        <tr>
            <th>Sr No.</th>
            <th>MiniCategory Name</th>
            <th>MiniCategory Image</th>
            <th>Add Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @{int i = 1;
            foreach (var item in Model)
            {
                <tr class="table-info">
                    <td>@i</td>
                    <td>@item.MiniCatName</td>
                    <td align="center"><a href="@Url.Content(@item.MiniCatImage)" target="_blank"><img src="@item.MiniCatImage" alt="" style="height:40px;width:40px;" /></a></td>
                    <td>@item.Adddate</td>
                    <td class="center">
                        @*<a href="#" class="btn btn-primary bindPopupModal" data-toggle="modal" data-target="#exampleModal" data-ajaxurl="@Url.Action("AddCategory", "Admin", new { id = item.ID })">Edit</a>*@
                        @Html.ActionLink("Edit", "AddMiniCategory", new { id = item.ID })
                        @Html.ActionLink("Delete", "DeleteMiniCategory", new { @class = "fa fa-trash", id = item.ID }, new { onclick = "return confirm('Are you sure you wish to delete this article?');" })
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>

