@model IEnumerable<ShivFactory.Business.Repository.ColorResponse>
@{
    ViewBag.Title = "ColorPartialView";
}

<div class="row overflow-auto">
    <div class="col-12">
        <table class="table datatable" cellspacing="0" width="100%">
            <thead>
                <tr class="bg-primary text-white">
                    <th>Sr No.</th>
                    <th>Color Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @{int index = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@item.Name</td>
                            <td>
                                <button class="btn btn-light">
                                    <i class="mdi mdi-database-edit text-primary"></i>
                                    @Html.ActionLink("Edit", "AddColor", new { Area = "Admin", id = item.Id })
                                </button>
                                <button class="btn btn-light">
                                    <i class="mdi mdi-close text-danger" onclick="Admin.DeleteColor(@item.Id);">Delete</i>
                                </button>
                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.datatable').DataTable();
    });
</script>