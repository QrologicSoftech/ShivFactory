@model List<ShivFactory.Business.Repository.Website.MenuResponse>
@{
    ViewBag.Title = "CategoryPartialview";
}

<ul class="navbar-nav m-auto">
    @foreach (var a in Model)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown'@a.Id'" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> @a.Name </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown'@a.Id'">
                @foreach (var b in a.SubCategory)
                {
                    <a class="dropdown-item" href="#">Fresh Fruits</a> <a class="dropdown-item" href="#">@b.Name </a>
                }
            </div>
        </li>
    }
</ul>
<script>
    $('.dropdown-toggle').click(function (e) {
        if ($(document).width() > 767) {
            e.preventDefault();
            var url = $(this).attr('href');
            if (url !== '#') {
                window.location.href = url;
            }
        }
    });
</script>