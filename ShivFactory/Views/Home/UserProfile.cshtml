@model ShivFactory.Business.Repository.UserProfile
@{
    ViewBag.Title = "Enter Your Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-md-12 grid-margin stretch-card" style="padding: 0 20% 0;">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title text-center">@ViewBag.Title</h4>
                                <p class="card-description text-center"> User Profile </p>
                                @using (Html.BeginForm("UserProfile", "Home", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal", id = "myform" }))
                                {
                                    <div class="form-group">
                                        <label>FirstName<span style="color:red">*</span></label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-lg border-left-0", @placeholder = "FirstName" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>LastName<span style="color:red">*</span></label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-lg border-left-0", @placeholder = "LastName" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>UserName<span style="color:red">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-primary"></i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control form-control-lg border-left-0", @placeholder = "Username" })

                                        </div>
                                        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>Email<span style="color:red">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-email-outline text-primary"></i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg border-left-0", @placeholder = "Email" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>Address<span style="color:red">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-lock-outline text-primary"></i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control form-control-lg border-left-0", @placeholder = "ConfirmPassword" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">

                                        <label>Image<span style="color:red">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-lock-outline text-primary"></i>
                                                </span>
                                            </div>
                                            @{ var display = Model != null && Model.UserImage != null ? "display:block" : "display:none";
                                                var imgPath = Model != null && Model.UserImage != null ? Model.UserImage : "";}
                                            <img src="@imgPath" id="Img" runat="server" style="border: 1px solid #eee3e3; @display;" height="100" width="100" />
                                        </div>

                                    </div>



                                    <div class="mb-4">
                                        @*<div class="form-check">
                                                <label class="form-check-label text-muted">
                                                    <input type="checkbox" class="form-check-input"> I agree to all Terms &amp; Conditions <i class="input-helper"></i>
                                                </label>
                                            </div>*@
                                    </div>

                                    <div class="mt-3">
                                        <button type="submit" class="btn btn-block btn-gradient-primary mr-2">SAVE</button>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Content/JS/CommonFunction.js"></script>

<script src="~/Content/JS/jquery-3.5.1.js"></script>
<script src="~/Content/JS/Common.js"></script>

<script src="~/Content/JS/js-dashboard.js"></script>
<script src="~/Content/JS/js-settings.js"></script>
