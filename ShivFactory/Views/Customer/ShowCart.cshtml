@model ShivFactory.Business.Repository.CartModel
@{
    ViewBag.Title = "ShowCart";
    Layout = "~/Views/Shared/_WebSiteLayout.cshtml";
}

<script src="~/Js/Cart.js"></script>
<section class="section-content py-5 mt-5">
    <div class="container">
        <div class="row">
            <aside class="col-lg-9">
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-borderless table-shopping-cart">
                            <thead class="text-muted">
                                <tr class="small text-uppercase">
                                    <th scope="col">Product</th>
                                    <th scope="col" width="120">Quantity</th>
                                    <th scope="col" width="120">Price</th>
                                    <th scope="col" class="text-right d-none d-md-block" width="200"> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr id="@item.ID">
                                        <td>
                                            <figure class="itemside align-items-center">
                                                <div class="aside"><img src="@item.ImagePath" class="img-sm"></div>
                                                <figcaption class="info">
                                                    <a href="#" class="title text-dark" id="ProductName">@item.ProductName</a>
                                                    <input type="hidden" id="ProductId" value="@item.ProductID" />
                                                    <input type="hidden" id="ProductVarientId" value="@item.ProductVarientID" />
                                                    <input type="hidden" id="vendorId" value="@item.vendorId" />
                                                    <p class="text-muted small">
                                                        Matrix: 25 Mpx <br>
                                                        Brand: Canon
                                                    </p>
                                                </figcaption>
                                            </figure>
                                        </td>
                                        <td>
                                            <input type="number" id="Quantity" class="form-control col-sm-4" value="@item.Quantity" onchange="cart.UpdateCart(this)" />
                                        </td>
                                        <td>
                                            <div class="price-wrap"> <var class="price"><i class="fas fa-rupee-sign"></i>@item.NetAmt</var> <small class="text-muted"> <i class="fas fa-rupee-sign"></i> <span id="SalePrice">@item.Price</span> </small> </div>
                                        </td>
                                        <td class="text-right d-none d-md-block">
                                            <a href="/Customer/DeleteCartItem?Id=@item.ID.ToString().Trim()" class="btn btn-light">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- table-responsive.// -->

                    <div class="card-body border-top">
                        <p class="icontext"><i class="icon text-success fa fa-truck"></i> Estimated delivery within 2-3 Days</p>
                    </div>
                    <!-- card-body.// -->

                </div>
                <!-- card.// -->

            </aside>
            <!-- col.// -->
            <aside class="col-md-3">
                <!-- card .// -->
                <div class="card">
                    <div class="card-body">
                        <dl class="dlist-align">
                            <dt>Total price:</dt>
                            <dd class="text-right"></dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt>Discount:</dt>
                            <dd class="text-right">0.00</dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt>Total:</dt>
                            <dd class="text-right  h5"><strong><i class="fas fa-rupee-sign"></i> @Model.CartValue</strong></dd>
                        </dl>
                        <hr>
                        <p class="text-center mb-3">
                            <img src="~/Content/UploadedImages/Images/payments.png" height="26">
                        </p>
                    </div>
                    <!-- card-body.// -->
                </div>
                <!-- card .// -->
            </aside>
            <!-- col.// -->
        </div>
    </div>
    <!-- container .//  -->
</section>
<script>
    $('#cartcount').text(@Model.CartItems.Count());
</script>

