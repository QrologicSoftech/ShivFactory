                    <!-- Form Step 2 -->
                    @if (Model.DeliveryAddress != null) { 
                <fieldset>
                    <!-- Progress Bar -->
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%"> </div>
                    </div>
                    <!-- Progress Bar -->
                    <h4>Delivery Adresss Information : <span>Step 2 - 4</span></h4>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>First Name: <span>*</span></label>
                                <input type="text" name="First Name" placeholder="First Name" class="form-control required">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Phone: <span>*</span></label>
                                <input type="text" name="Phone" placeholder="Phone" class="form-control required">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Zip Code: <span>*</span></label>
                                <input type="text" name="Zip Code" placeholder="Zip Code" class="form-control required">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Locality: <span>*</span></label>
                                <input type="text" name="Locality" placeholder="Locality" class="form-control required">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Address: <span>*</span></label>
                                <input type="text" name="Locality" placeholder="Address" class="form-control required">
                            </div>
