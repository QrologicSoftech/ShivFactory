                                    <option data-subtext="">Pimpri & Chinchwad </option>
                                    <option data-subtext="">Patna</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Select City: <span>*</span></label>
                                <select class="  form-control required">
                                    <option data-subtext=""> Select City</option>
                                    <option data-subtext="">Delhi </option>
                                    <option data-subtext="">Bangalore </option>
                                    <option data-subtext="">Hyderabad </option>
                                    <option data-subtext="">Chennai </option>
