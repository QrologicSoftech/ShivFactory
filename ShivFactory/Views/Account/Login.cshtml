@using ShivFactory.Models
@model ShivFactory.Business.Repository.LogInModel
@{
    ViewBag.Title = "Log in";
}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-md-12 grid-margin stretch-card" style="padding: 0 20% 0;">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title text-center">@ViewBag.Title</h4>

                                @using (Html.BeginForm("LogIn", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal", id = "myform" }))
                                {
                                    <div class="form-group">
                                        <label>UserName<span style="color:red">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-primary"></i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control form-control-lg border-left-0", @placeholder = "Username" })

                                        </div>
                                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>Password<span style="color:red">*</span></label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-lock-outline text-primary"></i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-lg border-left-0", @placeholder = "Password" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="mb-4">
                                        <div class="form-check">
                                            <label class="form-check-label text-muted">
                                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                                                @Html.LabelFor(m => m.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                                    <div class="mt-3">
                                        <button type="submit" class="btn btn-block btn-gradient-primary mr-2"> Login</button>
                                    </div>

                                    <div class="text-center mt-4 font-weight-light">
                                        Already have an account? <a href="Register" class="text-primary">SIGN UP</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<link href="~/Content/CSS/css-font-awesome.min.css" rel="stylesheet" />

<link href="~/Content/CSS/demo_3-style.css" rel="stylesheet" />
<link href="~/Content/CSS/css-materialdesignicons.min.css" rel="stylesheet" />